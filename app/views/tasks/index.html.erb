<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.description %></p>
  <p><%= task.done %></p>
  <%= link_to "See task", task_path(task) %>
  <%= link_to "Edit task", edit_task_path(task)%>
  <%= link_to "Delete task", task_path(task), method: 'delete', data: { confirm: "Are you sure?" }%>
<% end %>
